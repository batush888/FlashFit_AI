{
  "dataset_root": "/Users/Batu/Downloads/SPSS_v20_MacOS/Administration/Lesson1/FlashFit_AI/data/datasets/outfit_items_dataset",
  "train_images_path": "/Users/Batu/Downloads/SPSS_v20_MacOS/Administration/Lesson1/FlashFit_AI/data/datasets/train_images",
  "test_images_path": "/Users/Batu/Downloads/SPSS_v20_MacOS/Administration/Lesson1/FlashFit_AI/data/test_images",
  "processed_data_dir": "processed_data",
  "save_dir": "checkpoints",
  
  "model": {
    "backbone": "resnet50",
    "num_items": 4,
    "feature_dim": 512,
    "hidden_dim": 256,
    "dropout_rate": 0.3,
    "pretrained": true
  },
  
  "data": {
    "image_size": [224, 224],
    "batch_size": 16,
    "num_workers": 4,
    "train_split": 0.7,
    "val_split": 0.15,
    "test_split": 0.15
  },
  
  "training": {
    "epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "optimizer": "adam",
    "scheduler": "cosine",
    "grad_clip": 1.0,
    "early_stopping": true,
    "patience": 20
  },
  
  "loss": {
    "bce_weight": 1.0,
    "triplet_weight": 0.1,
    "triplet_margin": 0.5
  },
  
  "augmentation": {
    "horizontal_flip": true,
    "rotation_degrees": 10,
    "color_jitter": {
      "brightness": 0.2,
      "contrast": 0.2,
      "saturation": 0.2,
      "hue": 0.1
    },
    "random_crop": true,
    "normalize": {
      "mean": [0.485, 0.456, 0.406],
      "std": [0.229, 0.224, 0.225]
    }
  },
  
  "logging": {
    "use_wandb": false,
    "project_name": "outfit-compatibility",
    "log_interval": 10,
    "save_interval": 5
  }
}